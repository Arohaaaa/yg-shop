@import "./styles/iconfont.wxss";

/* 初始化默认样式 */
page,view,swiper,swiper-item,image,navigator{
  padding: 0;
  margin: 0;
  box-sizing: border-box;
}

/* 主题颜色通过一个变量实现 */
page{
  /* 定义主题颜色 */
  --themeColor: #eb4450;
  /* 定义统一的字体大小 假设设计稿大小是375px 1px = 2rpx */
  font-size: 28rpx;
}

image{
  width: 100%;
}